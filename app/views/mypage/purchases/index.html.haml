= render 'layouts/header'
-# パンくずリスト
.breadcrumbs_list
  - if request.fullpath == "/mypage"
    - breadcrumb :mypage
    = breadcrumbs separator: " &rsaquo; "
  - elsif request.fullpath == "/mypage/purchases/dealing"
    - breadcrumb :mypage_purchases_dealing
    = breadcrumbs separator: " &rsaquo; "
  - elsif request.fullpath == "/mypage/purchases/closed"
    - breadcrumb :mypage_purchases_closed
    = breadcrumbs separator: " &rsaquo; "
.mypage-wrap
  = render 'mypage/side_menu'
  .main_menu
    = render 'mypage/purchases/show_purchases'
= render 'layouts/footer'